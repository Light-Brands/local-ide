{
  "name": "local-ide",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "app": "NEXT_DIST_DIR=.next-app next dev -p 3000 --webpack",
    "ide": "NEXT_DIST_DIR=.next-ide next dev -p 4000 --webpack",
    "terminal": "npx tsx server/terminal-server.ts",
    "tunnel": "cloudflared tunnel --url http://localhost:4000 run local-ide",
    "dev": "concurrently --kill-others -n app,ide,terminal -c blue,green,cyan \"npm run app\" \"npm run ide\" \"npm run terminal\"",
    "dev:tunnel": "concurrently --kill-others -n app,ide,terminal,tunnel -c blue,green,cyan,yellow \"npm run app\" \"npm run ide\" \"npm run terminal\" \"npm run tunnel\"",
    "dev:local": "concurrently --kill-others -n app,ide -c blue,green \"npm run app\" \"npm run ide\"",
    "build": "next build",
    "build:app": "EXCLUDE_IDE=true next build",
    "start": "next start -p 3000",
    "start:ide": "next start -p 4000",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "setup": "node setup/wizard.mjs",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-rust": "^6.0.2",
    "@codemirror/language": "^6.12.1",
    "@codemirror/lint": "^6.9.2",
    "@codemirror/search": "^6.6.0",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.11",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.90.1",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "better-sqlite3": "^11.7.0",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "framer-motion": "^12.27.1",
    "gsap": "^3.14.2",
    "highlight.js": "^11.11.1",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.562.0",
    "marked": "^17.0.1",
    "mermaid": "^11.12.2",
    "next": "16.1.4",
    "node-pty": "^1.2.0-beta.8",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-resizable-panels": "^4.4.1",
    "sharp": "^0.34.5",
    "ws": "^8.18.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.5.14",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "tailwindcss": "^4",
    "typescript": "5.9.3"
  }
}
